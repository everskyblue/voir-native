{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES5",
        "module": "CommonJS",
        "removeComments": false,
        "noImplicitAny": true,
        "noImplicitThis": false,
        "lib": ["ES2022"],
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./types",
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "./types"]
}